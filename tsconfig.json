{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "declaration": true,
    "stripInternal": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "rootDir": ".",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
