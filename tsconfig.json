{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "inlineSourceMap": false,
    "lib": ["ES2018", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
